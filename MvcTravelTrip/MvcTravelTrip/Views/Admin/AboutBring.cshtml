@model MvcTravelTrip.Models.Classes.About
@{
    ViewBag.Title = "AboutBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("EditAbout", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AboutID)
        @Html.Label("Fotoğraf")
        @*@Html.TextBoxFor(x => x.PhotoUrl, new { @class = "form-control" })*@
        <input type="file" name="PhotoUrl" />
        <br />
        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}