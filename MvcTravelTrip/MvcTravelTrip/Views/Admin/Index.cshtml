@using MvcTravelTrip.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogHeading</td>
            <td><a href="/Admin/DeleteBlog/@item.BlogID/" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogBring/@item.BlogID/" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/NewBlog/" class="btn btn-primary">Yeni Blog</a>