@using MvcTravelTrip.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentID</td>
            <td>@item.UserName</td>
            <td>@item.Mail</td>
            <td>@item.CommentName</td>
            <td>@item.Blog.BlogHeading</td>
            <td><a href="/Admin/DeleteComment/@item.CommentID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/CommentBring/@item.CommentID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>