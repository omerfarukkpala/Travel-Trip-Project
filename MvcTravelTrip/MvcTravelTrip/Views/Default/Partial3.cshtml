@using MvcTravelTrip.Models.Classes
@model List<Blog>
<div class="padding">
    <h4>The 4 Most Popular Blogs</h4>
    <ul class="list list-pad">
        @{int i = 0; }
        @foreach (var item in Model)
        {
            <li class="list-bg">
                <span>
                    @{i++;
                    } @i.
                </span><a href="/Blog/BlogDetail/@item.BlogID/">@item.BlogHeading</a>
            </li>
        }
    </ul>
    <a href="/Blog/Index/" class="link1">See All Blogs</a>
</div>