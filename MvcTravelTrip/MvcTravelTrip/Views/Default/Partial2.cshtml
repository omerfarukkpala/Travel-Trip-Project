@using MvcTravelTrip.Models.Classes
@model List<Blog>
@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" style="width:275px; height:200px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.BlogHeading</h4>
            <span class="doller">@item.BlogDate.ToString("dd.MM.yyyy")</span>
            <p>@item.Description.Substring(0, 100)...</p>
            <p><a href="/Blog/BlogDetail/@item.BlogID/"><span class="read">Read more>></span></a></p>
        </div>
    </div>
}