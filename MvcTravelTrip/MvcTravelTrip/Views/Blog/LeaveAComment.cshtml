<div class="content-form">
    <h3>Leave a comment</h3>
    <form method="post">
        <input type="hidden" placeholder="ID" name="Blogid" value="@ViewBag.value" required readonly />
        <input type="text" placeholder="User Name" name="UserName" required />
        <input type="text" placeholder="e-mail Address" name="Mail" required />
        <textarea placeholder="Yorum" name="CommentName" required></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>

<script>
    if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
</script>
